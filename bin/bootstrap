#!/usr/bin/env bash
# This script installs all dependencies required to setup Lightning for development.
# Supports macOS (Darwin) and Linux (Debian/Ubuntu).

set -euo pipefail

trap 'echo "Script interrupted at line $LINENO"; exit 1' ERR INT

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Source common functions and detect platform
source "$SCRIPT_DIR/bootstrap.d/common.sh"
detect_and_source_platform

# Run the bootstrap process
run_bootstrap "$@"
