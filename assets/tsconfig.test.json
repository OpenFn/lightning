{
  "extends": ["@tsconfig/node-lts/tsconfig.json", "./tsconfig.base.json"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "jsx": "react-jsx"
  },
  "files": [],
  "include": ["*.d.ts", "test/**/*", "js/**/*"],
  "exclude": ["node_modules/**"],
  "tsimp": {
    "compilerOptions": {
      "skipLibCheck": true,
      "strict": false
    }
  }
}
