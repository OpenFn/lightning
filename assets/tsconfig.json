{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "rootDir": "../",
    "lib": ["dom", "ES2022"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["js/**/*"],
  "exclude": ["node_modules"]
}
