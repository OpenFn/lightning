<ul>
  <%= if @current_user do %>
    <li><%= @current_user.email %></li>
    <li>
      <.link href={Routes.profile_edit_path(@conn, :edit)}>
        Settings
      </.link>
    </li>
  <% else %>
    <li>
      <.link
        :if={Lightning.Config.check_flag?(:allow_signup)}
        href={~p"/users/register"}
      >
        Register
      </.link>
    </li>
    <li>
      <.link href={Routes.user_session_path(@conn, :new)}>
        Log in
      </.link>
    </li>
  <% end %>
</ul>
